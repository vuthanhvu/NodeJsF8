<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-lg-3">
            <button class="btn btn-light text-info">Lear Chanh</button>
        </div>
        <div class="col-lg-9">
            <h2>{{this.name}}</h2>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{this.videoId}}" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
            <p class="text-danger">{{this.description}}</p>
        </div>
        {{/each}}
    </div>
</div>